<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<!-- TODO: Break the Spring configuration files to multiple files -->
	<context:annotation-config /> <!-- Looks for the Annotations -->
	<!-- <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/> -->
	
	<!-- End point beans -->
	<bean id="studentServiceEndpoint" class="com.appy.endpoint.student.StudentService" />
	<bean id="loginServiceEndpoint" class="com.appy.endpoint.user.login.LoginService" />
	
	<!-- Dependency beans -->
	<bean id="studentService" class="com.appy.service.student.StudentServiceImpl" />
	
	<bean id="userService" class="com.appy.service.user.login.UserServiceImpl" />
	
	<!-- TODO: Move the DAO, datasource information to different files -->
	<!-- DAO -->
	<bean id="studentDAO" class="com.appy.dao.StudentDAOImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<!-- Datasource -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<!-- TODO: get the below information from Properties file -->
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/appy_poc" />
		<property name="username" value="root" />
		<property name="password" value="password" />
	</bean>
	
	
</beans>
